#
# bspwm hotkeys
#

alt + shift + q
	bspc quit

### Monitor ###
# Focus / move node to a monitor
alt + {_,shift + }{w,e}
        bspc {monitor -f,node -m} {west,east}

### Desktop ###
# Focus / move node to a desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} "^{1-9,10}"
#
# Circulate leaves of the tree of the selected desktop
alt + {comma,period}
	bspc desktop -C {backward,forward}

# Balance nodes on desktop
alt + b
	bspc desktop -B

alt + shift + f
        bspc desktop -t floating


### Windows ###
# Focus / move node
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + {_,shift + }c
	bspc node -f {next,prev}

# Close / kill selected node
alt + {_,shift +} x
	bspc node {-c,-k}

# Toggle status of node
alt + {f,s,t}
	bspc node -t {floating,fullscreen,sticky}

# Increase size of current node
alt + ctrl + {h,j,k,l}
	bspc node -e {west -20,south +20,north -20,east +20}

# Decrease size of current node
alt + ctrl + shift + {h,j,k,l}
	bspc node -e {east -20,north +20,south -20,west +20}

### Splitting nodes ###

# Preselect the splitting area of current node
super + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel preselect of node / desktop
super + {_,shift + }space
	bspc {node -p cancel,desktop -c}

# Set splitting ratio of current node
super + {1-9}
	bspc node -r 0.{1-9}

### Rotating nodes ###

super + ctrl + {h,l}
        bspc desktop -R {270,90}

super + shift + {h,j,k,l}
        bspc node -R {west,south,north,east} 90


###
# Mouse stuff
###
~button1
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + @button{1-3}
	bspc pointer -u

#
# audio
#
XF86AudioRaiseVolume
	amixer sset Master 1000+ unmute

XF86AudioLowerVolume
	amixer sset Master 1000- unmute

#
# wm independent hotkeys
#

alt + Return
	termite

alt + r
	dmenu_run -fn "DejaVu Sans Mono 12"

alt + p
        passmenu -fn "DejaVu Sans Mono 12"

alt + c
        chromium

alt + d
        /home/danielrf/.local/bin/rofi-pdf ~/Mendeley\ Desktop

alt + e
        emacsclient -c

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
